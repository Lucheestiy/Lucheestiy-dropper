# Optional local host port mapping (container listens on 80).
DROPPR_HOST_PORT=8098

# Credentials for create-share.sh script (optional)
DROPPR_USER=admin
DROPPR_PASSWORD=your_password_here

# Upload processing quality (droppr-faststart)
# - HEVC/H.265 uploads may be transcoded to H.264 for browser compatibility.
# - Lower CRF = higher quality (and larger files).
DROPPR_FASTSTART_X264_PRESET=slow
DROPPR_FASTSTART_X264_CRF=16
DROPPR_FASTSTART_AAC_BITRATE=256k
DROPPR_FASTSTART_COPY_AUDIO=true
DROPPR_FASTSTART_FFMPEG_TIMEOUT_SECONDS=7200
